{
    "manifest_version": 2,
    "name": "Counter",
    "version": "0.1",
    "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "popup.js"
            ],
            "html": [
                "popup.html"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}